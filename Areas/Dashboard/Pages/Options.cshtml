@page
@model NewStreamSupporter.Areas.Dashboard.Pages.OptionsModel

<h1>Options</h1>

<div class="border border-top my-2"></div>
<div class="row mx-0">
    <div class="col-lg-6 col-md-8 offset-lg-3 offset-md-2 d-flex justify-content-center">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Model.IsGoogleActive" /> @Html.DisplayNameFor(model => model.Model.IsGoogleActive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Model.IsTwitchActive" /> @Html.DisplayNameFor(model => model.Model.IsTwitchActive)
                </label>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
