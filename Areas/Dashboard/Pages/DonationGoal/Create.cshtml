@page
@model NewStreamSupporter.Areas.Dashboard.Pages.DonationGoal.CreateModel

<h1>Create donation goal</h1>

<hr />
<div class="row mx-0">
    <div class="col-lg-6 col-md-8 offset-lg-3 offset-md-2">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DonationGoalModel.Id" />
            <input type="hidden" asp-for="DonationGoalModel.OwnerId" />
            <div class="form-group pb-2">
                <label asp-for="DonationGoalModel.Name" class="control-label"></label>
                <input asp-for="DonationGoalModel.Name" class="form-control" />
                <span asp-validation-for="DonationGoalModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="DonationGoalModel.Text" class="control-label"></label>
                <input asp-for="DonationGoalModel.Text" class="form-control" />
                <span asp-validation-for="DonationGoalModel.Text" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="DonationGoalModel.TargetAmount" class="control-label"></label>
                <input asp-for="DonationGoalModel.TargetAmount" class="form-control" />
                <span asp-validation-for="DonationGoalModel.TargetAmount" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="DonationGoalModel.CurrentAmount" class="control-label"></label>
                <input asp-for="DonationGoalModel.CurrentAmount" class="form-control" />
                <span asp-validation-for="DonationGoalModel.CurrentAmount" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="DonationGoalModel.BackgroundColor" class="control-label"></label>
                <br />
                <input class="form-control js-color" asp-for="DonationGoalModel.BackgroundColor" data-jscolor="{preset: 'ThemedPreset'}" />
                <span asp-validation-for="DonationGoalModel.BackgroundColor" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="DonationGoalModel.FontColor" class="control-label"></label>
                <br />
                <input class="form-control js-color" asp-for="DonationGoalModel.FontColor" data-jscolor="{preset: 'ThemedPreset'}" />
                <span asp-validation-for="DonationGoalModel.FontColor" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="DonationGoalModel.ExpiryDate" class="control-label"></label>
                <input asp-for="DonationGoalModel.ExpiryDate" type="date" class="form-control" />
                <span asp-validation-for="DonationGoalModel.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger mb-1" asp-page="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
