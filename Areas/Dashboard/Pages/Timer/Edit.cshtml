@page
@using NewStreamSupporter.Helpers;
@using NewStreamSupporter.Models;
@model NewStreamSupporter.Areas.Dashboard.Pages.Timer.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TimerModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimerModel.Id" />
            <input type="hidden" asp-for="TimerModel.OwnerId" />
            <div class="form-group">
                <label asp-for="TimerModel.Name" class="control-label"></label>
                <input asp-for="TimerModel.Name" class="form-control" />
                <span asp-validation-for="TimerModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimerModel.Text" class="control-label"></label>
                <input asp-for="TimerModel.Text" class="form-control" />
                <span asp-validation-for="TimerModel.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimerModel.Length" class="control-label"></label>
                <input asp-for="TimerModel.Length" class="form-control" />
                <span asp-validation-for="TimerModel.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimerModel.BackgroundColor" class="control-label"></label>
                <br />
                <input class="form-control js-color" asp-for="TimerModel.BackgroundColor" data-jscolor="{preset: 'ThemedPreset'}" />
                <span asp-validation-for="TimerModel.BackgroundColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimerModel.FontColor" class="control-label"></label>
                <br />
                <input class="form-control js-color" asp-for="TimerModel.FontColor" data-jscolor="{preset: 'ThemedPreset'}" />
                <span asp-validation-for="TimerModel.FontColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
